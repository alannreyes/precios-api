# PRECIOS API - CONFIGURACIÃ“N EMPRESARIAL
# =============================================================================

# CORE SYSTEM
NODE_ENV=development
PORT=3000
API_VERSION=v1
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/precios_api
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=precios_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=precios_api
DATABASE_SYNC=false
DATABASE_LOGGING=false

# REDIS
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_ENABLED=false

# AI SERVICES
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key-here
AI_VALIDATION_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.95

# SCRAPING INFRASTRUCTURE
PLAYWRIGHT_ENABLED=true
PROXY_SERVICE=bright_data
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password
ANTI_DETECTION_ENABLED=true
STEALTH_MODE=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# MARKETPLACE CONFIGS
MERCADOLIBRE_ENABLED=true
AMAZON_BUSINESS_ENABLED=true
FALABELLA_ENABLED=true
TMALL_ENABLED=false

# MONITORING & ALERTS
SENTRY_DSN=https://your-sentry-dsn-here
GRAFANA_ENABLED=false
SLACK_WEBHOOK=https://hooks.slack.com/your-webhook
ERROR_THRESHOLD=0.01
LOG_LEVEL=info

# BUSINESS LOGIC
EXACT_MATCH_ONLY=true
ALTERNATIVES_DEFAULT=false
OFFICIAL_SOURCES_PRIORITY=true
CACHE_TTL=14400
MAX_RESPONSE_TIME=15000

# COUNTRIES & CURRENCIES
SUPPORTED_COUNTRIES=PE,MX,AR,CL,BR,CO,US,DE,UK,JP,ES,IT,FR,NL,CN,TW,KR,CA
DEFAULT_CURRENCY=USD
CURRENCY_API_KEY=your-exchange-rate-api-key
CURRENCY_UPDATE_INTERVAL=3600000

# SECURITY
JWT_SECRET=your-super-secure-jwt-secret-here
API_KEY_ENCRYPTION=AES256
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
HELMET_ENABLED=true

# GLOBAL SEARCH FEATURES
GLOBAL_SEARCH_ENABLED=true
DELIVERY_ESTIMATES_ENABLED=true
IMPORT_INFO_ENABLED=true
MINING_INSIGHTS_ENABLED=true 